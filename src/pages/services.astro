---
// Services and Pricing page with calculator
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import PricingCalculator from '../components/PricingCalculator.astro';
---

<Layout title="Services & Pricing - ASOP Print" description="Explore our printing services and get instant pricing with our interactive calculator.">
	<Navigation />
	
	<main class="services-page">
		<section class="services-hero">
			<div class="container">
				<h1>Services & Pricing</h1>
				<p class="hero-subtitle">Professional printing solutions with transparent pricing<br>
				To get estimated time, please contact us directly.
			</p>

			</div>
		</section>

		<!-- Pricing Calculator -->
		<PricingCalculator />

		<section class="services-overview">
			<div class="container">
				<div class="section-header">
					<h2>Our Services</h2>
					<p>Comprehensive printing solutions for all your needs</p>
				</div>

				<div class="services-grid">
					<div class="service-card">
						<div class="service-icon">
							<svg width="50" height="50" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M14 2H6C5.46957 2 4.96086 2.21071 4.58579 2.58579C4.21071 2.96086 4 3.46957 4 4V20C4 20.5304 4.21071 21.0391 4.58579 21.4142C4.96086 21.7893 5.46957 22 6 22H18C18.5304 22 19.0391 21.7893 19.4142 21.4142C19.7893 21.0391 20 20.5304 20 20V8L14 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								<path d="M14 2V8H20" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								<path d="M16 13H8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								<path d="M16 17H8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								<path d="M10 9H9H8" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
							</svg>
						</div>
						<h3>Document Printing</h3>
						<p>High-quality document printing on various paper types including A4 and A5 sizes with different GSM options.</p>
						<ul>
							<li>A4 (70gsm & 80gsm)</li>
							<li>A5 (70gsm & 80gsm)</li>
							<li>Color and B&W options</li>
							<li>Multiple quality settings</li>
						</ul>
					</div>

					<div class="service-card">
						<div class="service-icon">
							<svg width="50" height="50" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M9 9H15V15H9V9Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								<path d="M3 5C3 4.46957 3.21071 3.96086 3.58579 3.58579C3.96086 3.21071 4.46957 3 5 3H19C19.5304 3 20.0391 3.21071 20.4142 3.58579C20.7893 3.96086 21 4.46957 21 5V19C21 19.5304 20.7893 20.0391 20.4142 20.4142C20.0391 20.7893 19.5304 21 19 21H5C4.46957 21 3.96086 20.7893 3.58579 20.4142C3.21071 20.0391 3 19.5304 3 19V5Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
							</svg>
						</div>
						<h3>Photo Printing</h3>
						<p>Premium photo printing services using high-quality photo paper for vibrant and long-lasting prints.</p>
						<ul>
							<li>Premium photo paper</li>
							<li>High-resolution printing</li>
							<li>Various sizes available</li>
							<li>Professional quality results</li>
						</ul>
					</div>

					<div class="service-card">
						<div class="service-icon">
							<svg width="50" height="50" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M21 16V8C20.9996 7.64928 20.9071 7.30481 20.7315 7.00116C20.556 6.69751 20.3037 6.44536 20 6.27L13 2.27C12.696 2.09446 12.3511 2.00205 12 2.00205C11.6489 2.00205 11.304 2.09446 11 2.27L4 6.27C3.69626 6.44536 3.44398 6.69751 3.26846 7.00116C3.09294 7.30481 3.00036 7.64928 3 8V16C3.00036 16.3507 3.09294 16.6952 3.26846 16.9988C3.44398 17.3025 3.69626 17.5546 4 17.73L11 21.73C11.304 21.9055 11.6489 21.9979 12 21.9979C12.3511 21.9979 12.696 21.9055 13 21.73L20 17.73C20.3037 17.5546 20.556 17.3025 20.7315 16.9988C20.9071 16.6952 20.9996 16.3507 21 16Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								<path d="M7.5 4.21L12 6.81L16.5 4.21" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								<path d="M7.5 19.79V14.6L3 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								<path d="M21 12L16.5 14.6V19.79" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								<path d="M12 22.08V17L7.5 14.6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								<path d="M12 22.08V17L16.5 14.6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
							</svg>
						</div>
						<h3>Stickers & Labels</h3>
						<p>Custom sticker printing on adhesive paper perfect for branding, labeling, or personal use.</p>
						<ul>
							<li>Adhesive sticker paper</li>
							<li>Custom shapes and sizes</li>
							<li>Waterproof options</li>
							<li>Bulk printing available</li>
						</ul>
					</div>

					<div class="service-card">
						<div class="service-icon">
							<svg width="50" height="50" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M4 19.5C4 18.837 4.26339 18.2011 4.73223 17.7322C5.20107 17.2634 5.83696 17 6.5 17H20" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								<path d="M6.5 2H20V22H6.5C5.83696 22 5.20107 21.7366 4.73223 21.2678C4.26339 20.7989 4 20.163 4 19.5V4.5C4 3.83696 4.26339 3.20107 4.73223 2.73223C5.20107 2.26339 5.83696 2 6.5 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								<path d="M9 7H15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								<path d="M9 11H15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
							</svg>
						</div>
						<h3>Binding Services</h3>
						<p>Professional binding options to give your documents a polished, professional appearance.</p>
						<ul>
							<li>Perfect glue binding</li>
							<li>Booklet binding</li>
							<li>Durable and professional</li>
							<li>Various thickness options</li>
						</ul>
					</div>
				</div>
			</div>
		</section>

		<section class="delivery-info">
			<div class="container">
				<div class="info-card">
					<div class="info-icon">
						<svg width="50" height="50" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M1 3H3L3.4 5M7 13H17L21 5H5.4M7 13L5.4 5M7 13L4.7 15.3C4.3 15.7 4.6 16.5 5.1 16.5H17M17 13V17C17 17.6 17.4 18 18 18S19 17.6 19 17V13M9 19.5C9.8 19.5 10.5 20.2 10.5 21S9.8 22.5 9 22.5 7.5 21.8 7.5 21 8.2 19.5 9 19.5ZM20 19.5C20.8 19.5 21.5 20.2 21.5 21S20.8 22.5 20 22.5 18.5 21.8 18.5 21 19.2 19.5 20 19.5Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
					</div>
					<h3>Delivery Service</h3>
					<p>We work with Royal Express to provide reliable delivery services. Delivery costs vary based on location and package size. <a href="https://asop.asia/#contact" target="_blank">Contact us</a> for exact delivery pricing and to arrange pickup.</p>
				</div>

				<div class="contact-cta">
					<h2>Ready to Place an Order?</h2>
					<p>Use our pricing calculator above to get an estimate, then contact us to finalize your order and arrange delivery.</p>
					<a href="https://asop.asia/#contact" class="btn btn-primary" target="_blank">Contact Us Now</a>
				</div>
			</div>
		</section>
	</main>
</Layout>

<style>
	.services-page {
		padding-top: 80px;
		min-height: 100vh;
	}

	.services-hero {
		padding: 4rem 0;
		text-align: center;
		background: rgba(255, 255, 255, 0.05);
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.services-hero h1 {
		font-size: 3rem;
		color: white;
		margin-bottom: 1rem;
		font-weight: 700;
	}

	.hero-subtitle {
		font-size: 1.3rem;
		color: rgba(255, 255, 255, 0.8);
		max-width: 600px;
		margin: 0 auto;
	}

	.services-overview {
		padding: 4rem 0;
	}

	.section-header {
		text-align: center;
		margin-bottom: 3rem;
	}

	.section-header h2 {
		font-size: 2.5rem;
		font-weight: 700;
		color: white;
		margin-bottom: 1rem;
	}

	.section-header p {
		font-size: 1.2rem;
		color: rgba(255, 255, 255, 0.8);
	}

	.services-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.service-card {
		background: rgba(255, 255, 255, 0.1);
		backdrop-filter: blur(20px);
		border: 1px solid rgba(255, 255, 255, 0.2);
		border-radius: 20px;
		padding: 2rem;
		transition: all 0.3s ease;
		animation: fadeInUp 0.6s ease-out;
	}

	.service-card:hover {
		transform: translateY(-10px);
		background: rgba(255, 255, 255, 0.15);
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
	}

	.service-icon {
		width: 80px;
		height: 80px;
		background: rgba(255, 224, 102, 0.2);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		margin-bottom: 1.5rem;
	}

	.service-icon svg {
		stroke: #FFE066;
	}

	.service-card h3 {
		font-size: 1.5rem;
		color: white;
		margin-bottom: 1rem;
		font-weight: 600;
	}

	.service-card p {
		color: rgba(255, 255, 255, 0.8);
		line-height: 1.7;
		margin-bottom: 1.5rem;
	}

	.service-card ul {
		list-style: none;
		padding: 0;
	}

	.service-card li {
		color: rgba(255, 255, 255, 0.7);
		padding: 0.3rem 0;
		position: relative;
		padding-left: 1.5rem;
	}

	.service-card li::before {
		content: "âœ“";
		position: absolute;
		left: 0;
		color: #FFE066;
		font-weight: bold;
	}

	.delivery-info {
		padding: 4rem 0;
		background: rgba(255, 255, 255, 0.05);
	}

	.info-card {
		background: rgba(255, 255, 255, 0.1);
		backdrop-filter: blur(20px);
		border: 1px solid rgba(255, 255, 255, 0.2);
		border-radius: 20px;
		padding: 2rem;
		text-align: center;
		margin-bottom: 3rem;
	}

	.info-icon {
		width: 100px;
		height: 100px;
		background: rgba(255, 224, 102, 0.2);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		margin: 0 auto 1.5rem;
	}

	.info-icon svg {
		stroke: #FFE066;
	}

	.info-card h3 {
		font-size: 1.8rem;
		color: white;
		margin-bottom: 1rem;
		font-weight: 600;
	}

	.info-card p {
		color: rgba(255, 255, 255, 0.8);
		line-height: 1.7;
		max-width: 600px;
		margin: 0 auto;
	}

	.info-card a {
		color: #FFE066;
		text-decoration: none;
	}

	.info-card a:hover {
		text-decoration: underline;
	}

	.contact-cta {
		text-align: center;
		padding: 3rem 2rem;
		background: rgba(255, 255, 255, 0.05);
		border-radius: 20px;
	}

	.contact-cta h2 {
		font-size: 2.5rem;
		color: white;
		margin-bottom: 1rem;
		font-weight: 700;
	}

	.contact-cta p {
		font-size: 1.2rem;
		color: rgba(255, 255, 255, 0.8);
		margin-bottom: 2rem;
		max-width: 600px;
		margin-left: auto;
		margin-right: auto;
	}

	.btn {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 1rem 2rem;
		border-radius: 50px;
		text-decoration: none;
		font-weight: 600;
		transition: all 0.3s ease;
	}

	.btn-primary {
		background: linear-gradient(135deg, #FFE066 0%, #FF6B9D 100%);
		color: #333;
	}

	.btn-primary:hover {
		transform: translateY(-3px);
		box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@media (max-width: 768px) {
		.services-hero h1 {
			font-size: 2.5rem;
		}

		.container {
			padding: 0 1rem;
		}

		.services-grid {
			grid-template-columns: 1fr;
		}

		.contact-cta h2 {
			font-size: 2rem;
		}

		.section-header h2 {
			font-size: 2rem;
		}
	}

	@media (max-width: 480px) {
		.services-hero h1 {
			font-size: 2rem;
		}

		.section-header h2 {
			font-size: 1.8rem;
		}

		.contact-cta h2 {
			font-size: 1.8rem;
		}
	}
</style>